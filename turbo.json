{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    },
    "docs:extract": {
      "dependsOn": ["build", "^docs:extract"],
      "outputs": ["temp/@bigidea/*.api.json"]
    },
    "docs:document": {
      "dependsOn": ["docs:extract", "^docs:document"],
      "outputs": ["apps/docs/docs/api/*"]
    },
    "build:docs": {
      "dependsOn": ["docs:document"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
